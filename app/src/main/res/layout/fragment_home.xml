<?xml version="1.0" encoding="utf-8"?>
<layout>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".ui.student.home.HomeFragment">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Home Page"
            android:textSize="@dimen/giant_text_size"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="@dimen/m"
            android:layout_marginTop="24dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="Enter your Quiz ID here"
            android:background="@drawable/input_box"
            android:padding="@dimen/s"
            android:layout_marginStart="@dimen/xs"
            android:layout_marginEnd="@dimen/xs"/>

    </LinearLayout>
</layout>